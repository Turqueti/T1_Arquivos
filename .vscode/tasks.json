
{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "${fileDirname}/*.h",
                "-o",
                "${fileDirname}/programaTrab"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        },
        {
            "label": "Make wall",
            "type": "shell",
            "command": "make wall",
            "group": "build",
        },
        {
            "label": "autoTest 1",
            "type": "shell",
            "command": "./.Tools/tester.sh",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn":["Make wall"]
        }
    ],
    "version": "2.0.0"
}