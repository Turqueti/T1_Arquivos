
{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "${fileDirname}/*.h",
                "-o",
                "${fileDirname}/programaTrab"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        },
        {
            "label": "builda test",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/test.c",
                "-o",
                "${fileDirname}/out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}